{
  "private": true,
  "workspaces": ["parts/*"],
  "scripts": {
    "be:dc": "docker-compose -f scripts/docker/docker-compose.backend.yml --project-directory .",
    "be:w": "tsc -w --project ./parts/backend",
    "be:n": "nodemon --legacy-watch --watch parts/backend/dist --inspect=0.0.0.0:9222 --nolazy parts/backend/dist/index.js",
    "be:dev": "yarn be:w && yarn be:n",
    "be:test": "cd parts/backend/ && mocha -r espower-typescript/guess test/**/*.spec.ts",
    "be:i": "yarn --cwd ./parts/backend add",
    "fe:i": "yarn --cwd ./parts/frontend add"
  }
}