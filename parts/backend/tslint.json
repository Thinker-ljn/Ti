{
    "extends": "tslint:recommended",
    "linterOptions": {
        "exclude": [
            "artisan"
        ]
    },
    "rules": {
        "arrow-parens": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "semicolon": false,
        "space-before-function-paren": true,
        "interface-name": false,
        "no-console": [
            true,
            "log",
            "error"
        ],
        "forin": false,
        "object-literal-sort-keys": false,
        "member-ordering": false,
        "max-classes-per-file": false,
        "variable-name": [true, "any", "allow-snake-case"]
    }
}