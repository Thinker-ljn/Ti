{
  "compilerOptions": {
    "watch": true,
    "outDir": "./build",
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "target": "es6"
  },
  // "include": ["src/*", ", "index.d.ts"test/*", "types/*"],
  "exclude": ["build",  "node_modules", "public"]
}