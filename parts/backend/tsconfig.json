{
  "compilerOptions": {
    "watch": true,
    "outDir": "./build",
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": [
    "build",
    "node_modules",
    "public"
  ]
}