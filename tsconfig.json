{
  "exclude": [ "node_modules" ],
  "compilerOptions": {
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@be/*": ["parts/backend/*"],
      "@fe/*": ["parts/frontend/*"],
      "@feSrc/*": ["@fe/src/*"],
      "@mk/*": ["parts/femock/*"]
    },
    "plugins": [
      { 
        "name": "typescript-tslint-plugin", 
        "configFile": "./tslint.json"
      }
    ]
  }
}
